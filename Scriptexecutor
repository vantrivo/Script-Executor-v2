-- Tabs
local TabButtons = {}
local ActiveTab = 1
local tabCount = 5
local tabNames = {}
for i = 1, tabCount do
    tabNames[i] = "slot " .. i
end

local ScriptBoxes = {}

for i = 1, tabCount do
    local tab = Instance.new("TextButton")
    tab.Name = "Tab" .. i
    tab.Size = UDim2.new(0, 100, 0, 30)
    tab.Position = UDim2.new(0, (i - 1) * 100, 0, 30)
    tab.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
    tab.Text = tabNames[i]
    tab.TextColor3 = Color3.fromRGB(255, 255, 255)
    tab.TextSize = 14
    tab.Font = Enum.Font.SourceSansBold
    tab.Parent = MainFrame

    tab.MouseButton1Click:Connect(function()
        for j, box in pairs(ScriptBoxes) do
            box.Visible = (j == i)
        end
        ActiveTab = i
        ErrorDisplay.Text = "Switched to " .. tabNames[i]
        ErrorDisplay.TextColor3 = Color3.fromRGB(0, 200, 255)
    end)

    table.insert(TabButtons, tab)
end

-- Script Boxes
for i = 1, tabCount do
    local box = Instance.new("TextBox")
    box.Name = "ScriptBox" .. i
    box.Size = UDim2.new(1, -20, 1, -140)
    box.Position = UDim2.new(0, 10, 0, 70)
    box.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    box.BorderSizePixel = 0
    box.TextColor3 = Color3.fromRGB(255, 255, 255)
    box.TextSize = 14
    box.Font = Enum.Font.Code
    box.TextXAlignment = Enum.TextXAlignment.Left
    box.TextYAlignment = Enum.TextYAlignment.Top
    box.ClearTextOnFocus = false
    box.MultiLine = true
    box.PlaceholderText = "Enter your script here for " .. tabNames[i]
    box.Visible = (i == 1)
    box.Parent = MainFrame
    ScriptBoxes[i] = box
end

